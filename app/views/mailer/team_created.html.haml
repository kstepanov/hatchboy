- if @owner == nil
  - message = "Someone has just created new team #{link_to(@object.name, [@object])}"
- elsif @owner == @recipient
  - message = "You have just created new team #{link_to(@object.name, [@object])}"
- else
  - message = "#{link_to(@owner.name, [@owner])} has just created new team #{link_to(@object.name, [@object])}"

%tbody
  %tr
    %td= message.html_safe
