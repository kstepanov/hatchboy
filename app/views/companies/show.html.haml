%ul.breadcrumb
  %li
    %p
      YOU ARE HERE
  %i.icon-angle-right
  %li
    %a.active{:href => company_path} Company Profile
.row
  .col-md-11    
    .page-title
      %i.icon-custom-ui
      %h3
        = @company.name
.row
  .col-md-12
    .row
      .col-md-12
        .grid.simple
          .grid-title.no-border
            %h4
              %span.semi-bold About company
            .tools
              %a.collapse{:href => "javascript:;"}
              = link_to "", edit_company_path, class: "config edit-company"
          .grid-body.no-border{:style => "display: block;"}
            =@company.description
            %br 
            %br
            Have any question? Contact to &nbsp;
            %span.semi-bold><
              =link_to  @company.contact_person.name, customer_path(@company.contact_person), :id => "contact-person-link"
            \.
            
.row
  .col-md-12
    =render partial: "teams/short_list", :object => @company.teams.order("created_at ASC")
.row
  .col-md-6
    .row
      =render :partial => "customers/short_list", :object => @company.customers.joins(:account).order("created_at ASC")
  .col-md-6
    .row
      =render :partial => "employees/short_list", :object => @company.employees.order("created_at ASC")
