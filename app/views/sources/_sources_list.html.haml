.col-md-12
  .grid.simple
    .grid-title.no-border
      %h4
        %span.semi-bold Sources
      .tools
        %a.collapse{:href => "javascript:;"}
    .grid-body.no-border{:style => "display: block;"}
      .row
        %table.table.table-hover.table-striped.table-bordered.no-more-tables.action-list#sources-list
          %thead
            %tr
              %th #
              %th Name
              %th Type
              %th Address
              %th Updated At
          %tbody
            = render partial: "sources/sources_list_row", collection: sources_list
      .row
        .col-md-8
        .col-md-2
          %a.btn.btn-primary.btn-cons{href: new_source_path}
            Add another source
