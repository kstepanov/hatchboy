%tr.data-row
  %td= sources_list_row.id
  %td= sources_list_row.name
  %td= sources_list_row.provider
  %td
    .col-md-6
      = sources_list_row.updated_at
    .col-md-6
      .list-column.list-row-action
        .list-row-action-wrapper
          =link_to edit_jira_source_path(sources_list_row), :rel => :tooltip, :title => "edit employee profile", :class => 'list-row-action-wrapper-link edit-profile-action' do
            %i.icon-edit
          =link_to jira_source_path(sources_list_row), :rel => :tooltip, :title => "edit employee profile", :class => 'list-row-action-wrapper-link view-profile-action' do
            %i.icon-cog
          =link_to "", :rel => :tooltip, :title => "delete source profile", :class => 'list-row-action-wrapper-link list-row-action-delete-one' do
            %i.icon-trash
          .popover.list-row-action-popover-delete-one.left
            .arrow
            %h3.popover-title Delete this source?
            .popover-content
              =form_tag jira_source_path(sources_list_row), :method => :delete do
                =submit_tag 'Delete', :class =>'list-row-action-popover-delete-one-btn btn btn-danger btn-small'
                .btn.btn-small.cancel Cancel
