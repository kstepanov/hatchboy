%ul.breadcrumb
  %li
    %p
      YOU ARE HERE
  %i.icon-angle-right
  %li
    %a{:href => company_path} Company
  %i.icon-angle-right
  %li
    %a{:href => reports_path} Reports
  %i.icon-angle-right
  %li
    %a.active{:href => report_mvp_index_path} MVP

.row
  .col-md-11
    .page-title
      %i.icon-custom-ui
      %h3 Most valuable players
  .col-md-1.text-right

.row
  .action-list.grid.simple
    .grid-title.no-border
      %h4
        %span.semi-bold Ratings
      .tools
        %a.collapse{:href => "javascript:;"}
    .grid-body.no-border
      = form_tag(report_mvp_index_path, method: "get", id: "report-filter-form") do
        #report-filter-block.row{style: "margin-bottom: 20px;"}
          = render partial: "report_mvp/filter"
        #report-data-block.row
          = render partial: "report_mvp/users_report_table"

- if @chart
  .row
    = high_chart("main_chart", @chart)

=content_for :javascript do
  =javascript_include_tag "js/reports"

:coffeescript
  $ ->
    $.reports.init(
      with_date_filter: true
    )