.tiles.purple.added-margin
  .tiles-body
    .controller
      %a.reload{href: "javascript:;"}
      %a.remove{href: "javascript:;"}
    .tiles-title
      HOURS LOGGED
    .heading
      %span.animate-number{data: {value: "#{WorkLog.where(user_id: account_company.users).sum(:time)}", animation_duration: "1200"}}
        0

    - hours_this_month = WorkLog.where(user_id: account_company.users, on_date: 1.month.ago..Time.now).sum(:time)
    - hours_last_month = WorkLog.where(user_id: account_company.users, on_date: 2.month.ago..1.month.ago).sum(:time)

    .description
      - if hours_this_month > hours_last_month
        %i.icon-custom-up
        %span.text-white.mini-description
          = "&nbsp; #{((hours_this_month - hours_last_month)/hours_this_month * 100).to_i}% higher".html_safe
          %span.blend
            than last month
      - elsif  hours_last_month > hours_this_month
        %i.icon-custom-down
        %span.text-white.mini-description
          = "&nbsp; #{((hours_last_month - hours_this_month)/hours_last_month * 100).to_i}% lower".html_safe
          %span.blend
            than last month