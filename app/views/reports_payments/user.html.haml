%ul.breadcrumb
  %li
    %p
      YOU ARE HERE
  %i.icon-angle-right
  %li
    %a{:href => company_path} Company
  %i.icon-angle-right
  %li
    %a{:href => reports_path} Reports
  %i.icon-angle-right
  %li
    %a{:href => reports_payments_path} Payments
  %i.icon-angle-right
  %li
    %a.active{:href => user_reports_hours_path(@user)} User

.row
  .col-md-11
    .page-title
      %i.icon-custom-ui
      %h3 User's hours report
  .col-md-1.text-right
  
.row
  .action-list.grid.simple
    .grid-title.no-border
      %h4
        %span.semi-bold
        = @user.name
      .tools
        %a.collapse{:href => "javascript:;"}
    .grid-body.no-border
      .row
        %table.table.table-hover.table-striped.table-bordered.no-more-tables.action-list#teams-short-list
          %thead
            %tr
              %th{:width => "40%"} Created by
              %th{:width => "30%"} Amount
              %th{:width => "30%"} Date
          %tbody
            = render partial: "reports_payments/user_payments_list_row", collection: @payments
      .row
        = paginate @payments