%ul.breadcrumb
  %li
    %p
      YOU ARE HERE
  %i.icon-angle-right
  %li
    %a{:href => company_path}< Company
  %i.icon-angle-right
  %li
    %a{:href => teams_path }< Teams
  %i.icon-angle-right
  %li
    %a{:href => team_path(@team)}<= @team.name
  %i.icon-angle-right
  %li
    %a.active{:href => new_team_employee_path }< Assign employee
  
.row
  .col-md-12    
    .page-title
      %i.icon-custom-ui
      %h3 Add employee
.row
  .col-md-12
    .grid.simple
      .grid-title.no-border
        %h4
          %span.semi-bold Assign employee
        .tools
      .grid-body.no-border
        = simple_form_for(@team_employee, :url => team_employees_path, :method => :post) do |f|
          = display_flash_message :error, f.error_notification
          = f.input :employee_id, collection: (@team.company.employees), include_blank: false
          .form-actions
            .pull-right
              %button.btn.btn-success.btn-cons{:type => "submit"}
                %i.icon-ok
                Save
              = link_to "Cancel", team_path(@team), :class => "btn btn-white btn-cons"
