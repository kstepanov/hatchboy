%ul.breadcrumb
  %li
    %p
      YOU ARE HERE
  %i.icon-angle-right
  %li
    %a{:href => company_path} Employee
  %i.icon-angle-right    
  %li
    %a.active{:href => employee_path(@employee)}= @employee.name
.row
  .col-md-11
    .page-title
      %i.icon-custom-ui
      %h3
        = @employee.name
  .col-md-1.text-right
.row
  .col-md-12
    .row
      .col-md-12
        .grid.simple
          .grid-title.no-border
            %h4
              %span.semi-bold Personal information
            .tools
              %a.collapse{:href => "javascript:;"}
              = link_to "", edit_employee_path(@employee), :class => "config edit-employee"
          .grid-body.no-border{:style => "display: block;"}
            .row
              .col-md-2
                %label Company
              .col-md-4= @employee.company.name
            .row 
              .col-md-2
                %label Name:
              .col-md-4= @employee.name
            .row
              .col-md-2
                %label Contact Email:
              .col-md-4= @employee.contact_email
            .row
              .col-md-2
                %label Role:
              .col-md-4= @employee.role
            .row
              .col-md-2
                %label Status:
              .col-md-4= @employee.status
