%ul.breadcrumb
  %li
    %p
      YOU ARE HERE
  %i.icon-angle-right
  %li
    %a{:href => company_path}< Company Employee
  %i.icon-angle-right
  %li
    %a.active{:href => edit_company_path} Edit  
.row
  .col-md-12    
    .page-title
      %i.icon-custom-ui
      %h3 Edit employee
.row
  .col-md-12
    .grid.simple
      .grid-title.no-border
        %h4
          %span.semi-bold Edit employee
        .tools
          %a.collapse{:href => "javascript:;"}
          %a.config{"data-toggle" => "modal", :href => "#grid-config"}
          %a.reload{:href => "javascript:;"}
          %a.remove{:href => "javascript:;"}
      .grid-body.no-border
        = simple_form_for(@employee, :as => :employee, :html => { :method => :put }) do |f|
          = render partial: "employees/form", :locals => { f: f }
