%ul.breadcrumb
  %li
    %p
      YOU ARE HERE
  %i.icon-angle-right
  %li
    %a{:href => company_path}< Company Profile
  %i.icon-angle-right
  %li
    %a.active{:href => edit_company_path} Edit  
.row
  .col-md-12    
    .page-title
      %i.icon-custom-ui
      %h3 Add employee
.row
  .col-md-12
    .grid.simple
      .grid-title.no-border
        %h4
          %span.semi-bold New customer
        .tools
          %a.collapse{:href => "javascript:;"}
          %a.config{"data-toggle" => "modal", :href => "#grid-config"}
          %a.reload{:href => "javascript:;"}
          %a.remove{:href => "javascript:;"}
      .grid-body.no-border
        = simple_form_for(@employee, :as => :company, :html => { :method => :put }) do |f|
          = display_flash_message :error, f.error_notification
          = f.input :name, :required => true, :hint => 'e.g. "Runolfsson LLC"', :autofocus => true
          = f.input :contact_email, :as => :email, :hint => 'e.g. "email@example.com"'
          = f.input :role, collection: ["Manager", "Developer", "Designer", "Fron-end developer"]
          = f.input :status, collection: ["Full day", "Temporary", "Half-day", "Fired", "Outsourcer"]
          .form-actions
            .pull-right
              %button.btn.btn-success.btn-cons{:type => "submit"}
                %i.icon-ok
                Save
              = link_to "Cancel", company_path, :class => "btn btn-white btn-cons"
