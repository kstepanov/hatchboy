%ul.breadcrumb
  %li
    %p
      YOU ARE HERE
  %i.icon-angle-right
  %li
    %a{:href => company_path} Company
  %i.icon-angle-right
  %li
    %a{:href => reports_path} Reports
  %i.icon-angle-right
  %li
    %a.active{:href => report_hours_path} Hours

.row
  .col-md-11
    .page-title
      %i.icon-custom-ui
      %h3 Hours report
  .col-md-1.text-right

- if @chart
  .row
    = high_chart("main_chart", @chart)
    
.row
  .action-list.grid.simple
    .grid-title.no-border
      %h4
        %span.semi-bold
          = @query_params[:group_by] == "teams" ? "Teams hours" : "Users hours"
      .tools
        %a.collapse{:href => "javascript:;"}
    .grid-body.no-border
      = form_tag(report_hours_path, method: "get", id: "report-filter-form") do
        #report-filter-block.row{style: "margin-bottom: 20px;"}
          = render partial: "report_hours/filter", locals: {params: @query_params}
        #report-data-block.row
          - if @query_params[:group_by] == "teams"
            = render partial: "report_hours/teams_report_table", locals: {params: @query_params}
          - else
            = render partial: "report_hours/users_report_table", locals: {params: @query_params}

=content_for :javascript do
  =javascript_include_tag "js/reports"

=content_for :javascript do
  =javascript_include_tag "highcharts/ext"

:coffeescript
  $ ->
    $.reports.init(
      with_date_filter: true
    )