%tr.data-row
  %td= row_prepared.id
  %td= row_prepared.description
  %td= number_to_currency(row_prepared.amount)
  %td= row_prepared.updated_at
  %td= row_prepared.created_by.name
  %td
    =link_to payment_path(row_prepared) do
      %button.btn.btn-sm.btn-small.btn-primary
        %i.icon-signin &nbsp;&nbsp;View
    =link_to edit_payment_path(row_prepared) do
      %button.btn.btn-sm.btn-small.btn-primary
        %i.icon-edit &nbsp;&nbsp;Edit
    =link_to payment_path(row_prepared), :method => 'delete', :confirm => "Are you sure ?" do
      %button.btn.btn-sm.btn-small.btn-danger
        %i.icon-trash &nbsp;&nbsp;Delete
