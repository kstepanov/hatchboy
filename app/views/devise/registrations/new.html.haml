= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:role => "form" }) do |f|
  .row
    .col-md-1
    .col-md-4
      %h2.text-center Sign up
      - if resource.errors.any?
        .alert.alert-danger= resource.errors.full_messages.first
      .form-group
        %label{:for => "user_name"} Username
        = f.text_field :name, :autofocus => true, :class => "form-control", :placeholder => "Username"
      .form-group
        %label{:for => "user_email"} Email
        = f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "Email"
      .form-group
        %label{:for => "user_password"} Password
        = f.password_field :password, :autofocus => true, :class => "form-control", :placeholder => "Password"
      .form-group{:for => "user_password_confirmation"}
        %label Confirm Password
        = f.password_field :password_confirmation, :autofocus => true, :class => "form-control", :placeholder => "Confirm Password"
      .form-group
        = f.submit  "Sign up", :class => 'btn btn-default text-center', :role => "button"
      
      = render "devise/shared/links"
