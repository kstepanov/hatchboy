= form_for([resource, resource.with_company], :as => resource_name, :url => registration_path(resource_name), :html => {:role => "form" }) do |f|
  .row
    .col-md-1
    .col-md-4
      %h2.text-center Sign up
      - if resource.errors.any?
        .alert.alert-danger= resource.errors.full_messages.join("<br />").html_safe
      .form-group
        %label Username
        = f.text_field :name, :autofocus => true, :class => "form-control", :placeholder => "Username"
      .form-group
        %label Email
        = f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "Email"
      .form-group
        %label Password
        = f.password_field :password, :autofocus => true, :class => "form-control", :placeholder => "Password"
      .form-group
        %label Confirm Password
        = f.password_field :password_confirmation, :autofocus => true, :class => "form-control", :placeholder => "Confirm Password"
      .form-group
        = f.fields_for :company do |company_form|
          = company_form.label :name, "Company Name"
          = company_form.text_field :name, :autofocus => true, :class => "form-control", :placeholder => "Company Name"
      .form-group
        = f.submit  "Sign up", :class => 'btn btn-default text-center', :role => "button"
      
      = render "devise/shared/links"
